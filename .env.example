ENVIRONMENT=development

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_DATABASE=postgres
DB_USERNAME=postgres
DB_PASSWORD=changeme123
DB_SSL_MODE=disable
DB_SCHEMA=public

# JWT Configuration (REQUIRED - Generate a secure secret in production)
JWT_SECRET=your-very-secure-jwt-secret-key-change-this-in-production

# Redis Configuration (Optional - used for rate limiting and caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=password123
REDIS_DATABASE=0

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8080
SERVER_ENVIRONMENT=development

# Frontend Configuration (for Docker Compose)
FRONTEND_PORT=3000

# Logging Configuration
LOG_LEVEL=debug
LOG_FILE=logs/mcp-gateway.log

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_DEFAULT=100

# Skip content filtering for local development
SKIP_CONTENT_FILTERING=true

# Security (Production)
# HTTPS_ENABLED=true
# TLS_CERT_FILE=/path/to/cert.pem
# TLS_KEY_FILE=/path/to/key.pem

# External Services (Optional)
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# CLOUDWATCH_LOG_GROUP=mcp-gateway-logs

# MCP Discovery Service
MCP_DISCOVERY_URL=https://metatool-service.jczstudio.workers.dev/search
